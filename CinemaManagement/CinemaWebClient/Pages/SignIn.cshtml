<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-7 px-0 d-none d-sm-block">
                    <img src="https://learnenglishteens.britishcouncil.org/sites/teens/files/field/image/RS9247_GettyImages-1334662982-hig.jpg"
                         alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
                <div class="col-sm-5 text-black">

                    @*<div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <span class="h1 fw-bold mb-0">Wellcome to Cinema</span>
                    </div>*@

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 pt-xl-0 mt-xl-n5"> <!-- mt-5 pt-5-->
                        <form method="post" asp-page="/SignIn" style="width: 28rem;">

                            <h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px;">Sign In</h3>
							@if (TempData["SuccessMsg"] != null)
							{
								<div class="alert alert-success" role="alert">
									@TempData["SuccessMsg"]
								</div>

							}
							@if (TempData["ErrorMsg"] != null)
							{
								<div class="alert alert-danger" role="alert">
									@TempData["ErrorMsg"]
								</div>

							}
                            <div class="form-outline mb-4">
                                <label class="form-label">Email address</label>
								<input asp-for="UserSignIn.Email" class="form-control form-control-lg" />
								<span asp-validation-for="UserSignIn.Email" class="text-danger ml-2"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label">Password</label>
								<input asp-for="UserSignIn.Password" type="password" class="form-control form-control-lg" />
								<span asp-validation-for="UserSignIn.Password" class="text-danger ml-2"></span>
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="btn btn-info btn-lg btn-block w-100" type="submit">SignIn</button>
                            </div>

                            @*<p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>*@
                            <p>Don't have an account? <a asp-page="/SignUp" class="link-info">Sign Up here</a></p>
							<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
							<div class="social d-flex text-center justify-content-center">
								<div id="g_id_onload"
									 data-client_id="965301919060-vi54tl3925kjdhprfvusnoshavhhn31k.apps.googleusercontent.com"
									 data-context="signin"
									 data-ux_mode="popup"
									 data-callback="onSignIn"
									 data-itp_support="true"
									 data-auto_prompt="false">
								</div>

								<div class="g_id_signin"
									 data-type="standard"
									 data-shape="rectangle"
									 data-theme="outline"
									 data-text="signin_with"
									 data-size="large"
									 data-logo_alignment="left">
								</div>
							</div>
						</form>
                    </div>
                </div>
            </div>
        </div>
    </section>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
