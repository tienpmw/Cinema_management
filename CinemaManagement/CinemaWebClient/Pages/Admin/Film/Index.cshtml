@page
@model CinemaWebClient.Pages.Admin.Film.IndexModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}



<div style="display:flex; margin-bottom:50px">
    <i class="fa-solid fa-film" style="font-size:50px; margin-right:5px"></i>
    <h1>Film</h1>
</div>

<hr />

<div class="create-link">
    <a href="~/Admin/Film/Create" class="btn btn-primary btn active disable-user" role="button" aria-pressed="true">
        Create new Film
    </a>
</div>

<div class="userTable" style="margin-top:30px;">
    <table id="myTable" class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Title</th>
                <th>Gerne</th>
                <th>Duration</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tableContent">
            <tr>
                <td>1</td>
                <td><img src="http://localhost:5001/api/Images/ba90770e-28e0-4abe-a201-5035b2125d2a.png" alt="thumbnail" class="img-thumbnail"></td>
                <td>100</td>
                <td>100</td>
                <td>100</td>
                <td></td>
            </tr>

        </tbody>
    </table>
</div>



<script>


    $(document).ready(function () {
        $('#myTable').DataTable({
            "searching": true,
            "lengthChange": false,
            "info": false,
            "ordering": false,
        });

        LoadData('http://localhost:5001/api/Films?$expand=genre');

    });

    function LoadData(link) {
        var tableContent = document.getElementById('tableContent');
        var imageAPI = "http://localhost:5001/api/Images/";
        tableContent.innerHTML = "";
        $.ajax({
            url: link,
            type: 'GET',
            data: {

            },
            success: (data) => {
                var tr = '';
                for (var i = 0; i < data.length; i++) {
                    tr += ` <tr>`;
                    tr +=
                        `
                            <tr>
                                <td>${data[i].FilmId}</td>
                                <td><img src="${imageAPI + data[i].Image}" alt="thumbnail" class="img-thumbnail"></td>
                                <td>${data[i].Title}</td>
                                <td>${data[i].Genre.GenreName}</td>
                                <td>${data[i].FilmDuration} minutes</td>
                                <td><a class="btn btn-primary" href="Film/Edit?id=${data[i].FilmId}" role="button">Edit</a></td>
                            `;
                    tr += ` </tr>`;
                } 
                tableContent.innerHTML = tr;
            },
            error: (err) => {
                NotificationMessageError("Server not respone!");
            }
        });
    }

</script>

<style>
    .userTable {
        width: 90%;
        margin: 0 auto;
    }

    .create-link {
        margin-left: 5%;
    }

    .mt-10 {
        margin-top: 10px;
    }
</style>
