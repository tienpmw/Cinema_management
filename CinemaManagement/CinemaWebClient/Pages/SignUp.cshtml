@page
@model CinemaWebClient.Pages.SignUpModel
@{
	Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Sign Up</title>
	@*<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">*@
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/css/signin.css" rel="stylesheet" />
</head>
<body>
	<section class="vh-100">
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-7 px-0 d-none d-sm-block">
					<img src="https://learnenglishteens.britishcouncil.org/sites/teens/files/field/image/RS9247_GettyImages-1334662982-hig.jpg"
						 alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
				</div>
				<div class="col-sm-5 text-black">

					<div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 pt-xl-0 mt-xl-n5">
						<!-- mt-5 pt-5-->
						<form method="post" asp-page="/SignUp" style="width: 28rem;">

							<h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px; font-weight: 700 !important;">Sign Up</h3>
							<div class="form-outline mb-4">
								<label class="form-label">Email address</label>
								<input asp-for="SignUp.Email" class="form-control form-control-lg" />
								<span asp-validation-for="SignUp.Email" class="text-danger ml-2"></span>
							</div>
							<div class="form-outline mb-4">
								<label class="form-label">FirstName</label>
								<input asp-for="SignUp.FirstName" class="form-control form-control-lg" />
								<span asp-validation-for="SignUp.FirstName" class="text-danger ml-2"></span>
							</div>
							<div class="form-outline mb-4">
								<label class="form-label">LastName</label>
								<input asp-for="SignUp.LastName" class="form-control form-control-lg" />
								<span asp-validation-for="SignUp.LastName" class="text-danger ml-2"></span>
							</div>
							<div class="form-outline mb-4">
								<label class="form-label">Password</label>
								<input asp-for="SignUp.Password" type="password" class="form-control form-control-lg" />
								<span asp-validation-for="SignUp.Password" class="text-danger ml-2"></span>
							</div>
							<div class="form-outline mb-4">
								<label class="form-label">Confirm password</label>
								<input asp-for="SignUp.ConfirmPassword" type="password" class="form-control form-control-lg" />
								<span asp-validation-for="SignUp.ConfirmPassword" class="text-danger ml-2"></span>
							</div>
							<div class="pt-1 mb-4">
								<button class="btn btn-info btn-lg btn-block w-100" type="submit">Sign Up</button>
							</div>
							<p>Have an account? <a asp-page="/SignIn" class="link-info">Sign In here</a></p>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/js/signin.js"></script>
</body>
</html>
